{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2015", "scripthost"],
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "strictPropertyInitialization": false,
    "target": "es2017",
    "baseUrl": ".",
    "noEmit": true,
    "declaration": false,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules", "vendor", "public", "**/*.spec.ts"
  ],
}
